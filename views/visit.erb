<%@title="Visit Us! - BarberShop" %>
<script type="text/javascript">
	$(function() {$('#datetimepicker').datetimepicker();});
	$(function() {$('#colour').simplecolorpicker();});
</script>

<h3>Arrange an appointment</h3>
</br>
<p>You can choose a convenient time to visit us here:</p>

<form id="visit form" action="/visit" method="POST" role="form">

	<div class="form-group">
		<label>Your name:</label>
		<input name="client[name]" type="text" class="form-control" value="<%=@c.name%>" placeholder="Your name">
	</div>

	<div class="form-group">
		<label>Phone:</label>
		<input name="client[phone]" type="text" class="form-control" value="<%=@c.phone%>"placeholder="Your phone">
	</div>

	<div class="form-group">
		<label>Your favourite barber is:</label>
		<select name="client[barber]" class="form-control" required form="visit form" size="1">
<!--<option <%= @barber=='Walter White' ? 'selected' : '' %>>Walter White</option> -->
<!--<option <%= @barber=='Jessie Pinkman' ? 'selected' : '' %>>Jessie Pinkman</option> -->
<!--<option <%= @barber=='Gus Fring' ? 'selected' : '' %>>Gus Fring</option> -->

		<% @barbers.each do |item| %>
		<option <%=@c.barber==item.name ? 'selected' : '' %>><%=item.name%> </option>
		<%end%>
		</select>
	</div> 

	<div class="form-group">
		<label>When should we be waiting for you?</label>
		<input name="client[datestamp]" id="datetimepicker" type="text" class="form-control" value="<%=@c.datestamp%>" placeholder="Enter date and time">
		<label>What colour should be used for dyeing?</label>
		</br>
		<select id="colour" name="client[color]">
			<option value="#7bd148">Green</option>
			<option value="#5484ed">Bold blue</option>
			<option value="#a4bdfc">Blue</option>
			<option value="#46d6db">Turquoise</option>
			<option value="#7ae7bf">Light green</option>
			<option value="#51b749">Bold green</option>
			<option value="#fbd75b">Yellow</option>
			<option value="#ffb878">Orange</option>
			<option value="#ff887c">Red</option>
			<option value="#dc2127">Bold red</option>
			<option value="#dbadff">Purple</option>
			<option value="#e1e1e1">Gray</option>
		</select>
	</div>

	<button type="submit" class="btn btn-primary">Done!</button>

</form>